{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2017",
            "ESNext.AsyncIterable"
        ],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}